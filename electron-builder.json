{
  "productName": "smithsville-poc",
  "directories": {
    "output": "app-builds"
  }, 
  "nsis": {
    "oneClick": true,
    "allowToChangeInstallationDirectory": false,
    "createStartMenuShortcut": true,
    "createDesktopShortcut": true,
    "deleteAppDataOnUninstall": false
  },
  "win": {
    "icon": "build/favicon",
    "target": [
      "nsis"
    ],
    "publish": ["github"]
  },
  "mac": {
    "icon": "build/favicon",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "build/favicon",
    "target": [
      "AppImage"
    ]
  }
}
